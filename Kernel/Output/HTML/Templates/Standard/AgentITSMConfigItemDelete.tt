<div class="row-of-columns">
    <div class="Content">
        <fieldset class="TableLike W300px flex-row">
            <div class="field-wrapper">
                <label>[% Translate("Name") | html %]:</label>
                <p class="Value">
                    [% Data.Name | html %]
                </p>
            </div>

            <div class="field-wrapper">
                <label>[% Translate("Number") | html %]:</label>
                <p class="Value">
                    [% Translate(Data.Number) | html %]
                </p>
            </div>
        </fieldset>
        <p class="SpacingTop message-primary">
            [% Translate("Do you really want to delete this config item?") | html %]
        </p>
    </div>
</div>
